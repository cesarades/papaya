<div class="w-100" id="message-<%= message.id %>">
  <div>
    <i class="author">
      <% if message.user == current_user %>
        <span class='d-flex justify-content-start'><%= message.user.first_name %></span>
      <% else %>
        <span class='d-flex justify-content-end'><%= message.user.first_name %></span>
      <% end %>
      <% if message.user == current_user %>
        <span class='d-flex justify-content-start'><small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      <% else %>
        <span class='d-flex justify-content-end'><small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      <% end %>
    </i>
    <% if message.user == current_user %>
      <div class="d-flex justify-content-start">
        <p class='current-user-content mb-0'><%= message.content %></p>
      </div>
    <% else %>
      <div class="d-flex justify-content-end">
        <p class='other-user-content mb-0'><%= message.content %></p>
      </div>
    <% end %>
  </div>
</div>
