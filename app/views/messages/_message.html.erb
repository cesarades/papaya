<div class="" id="message-<%= message.id %>">
  <i class="author">
    <% if message.user == current_user %>
      <p><small>You</small></p>
    <% else %>
      <span><%= message.user.first_name %></span>
    <% end %>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <% if message.user == current_user %>
    <div class="current-user-content">
      <p><%= message.content %></p>
    </div>
  <% else %>
    <div class="other-user-content">
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>
