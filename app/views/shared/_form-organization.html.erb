<div class="new-event-card">
  <%= simple_form_for(@event, defaults: { required: false }) do |f| %>
    <%= f.input :name, wrapper_html: { class: "input-box" } %>
    <%= f.input :address, wrapper_html: { class: "input-box" } %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <div class="inline">
      <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"}, item_wrapper_class: 'tag-calendar' %>
      <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"}, item_wrapper_class: 'tag-calendar' %>
    </div>
    <%= f.input :description, as: :text, placeholder: "Tell us more!" %>
    <div class="inline">
      <%= f.input :capacity %>
      <%= f.input :photo, as: :file %>
    </div>
    <%= f.input :category, as: :check_boxes, collection: Event::CATEGORY, input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item'%>
    <%= f.submit class: "btn btn-flat" %>
  <% end %>
</div>
