<div class="new-event-card">
  <%= simple_form_for(event, defaults: { required: false }) do |f| %>
    <div class="inline">
      <%= f.input :name, wrapper_html: {class: "w-75", id: "name-box"}  %>
      <%= f.input :capacity, wrapper_html: {class: "w-25"} %>
    </div>
    <%= f.input :address, wrapper_html: { class: "input-box" } %>
    <div class="inline">
      <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"}, item_wrapper_class: 'tag-calendar' %>
      <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"}, item_wrapper_class: 'tag-calendar' %>
    </div>
    <%= f.input :description, as: :text, wrapper_html: { class: "input-box" }, placeholder: "Tell us more!" %>
    <%= f.input :photo, as: :file, wrapper_html: { class: "input-box" } %>
    <%= f.input :category, as: :radio_buttons, collection: Event::CATEGORY, input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item'%>

    <%= f.submit class: "btn btn-flat w-100 m-20" %>
  <% end %>
</div>
