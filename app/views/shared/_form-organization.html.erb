<div class="new-event-card">
  <%= simple_form_for(@event) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :capacity %>
    <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :description %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :category, as: :check_boxes, collection: Event::CATEGORY input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item'%>
    <%= f.input :recurrence_times %>
    <%= f.input :recurrence_frequency, collection: ['Days', 'Months', 'Years'] %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: "btn btn-flat" %>
  <% end %>
</div>
