<div class="container">
  <%= simple_form_for(@event) do |f| %>
    <%= f.input :name %>
    <%= f.input :capacity %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :description %>
    <%= f.input :category, collection: ['Health', 'Education', 'Animals', 'Community', 'Children', 'Faith', 'Environment', 'Women', 'Shelters', 'LGBTQ', 'Sport', 'Food', 'Other'] %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :address %>
    <%= f.input :recurrence_times %>
    <%= f.input :recurrence_frequency, collection: ['Days', 'Months', 'Years'] %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  <% end %>
</div>
