<div class="index-card" >
  <div class="picture">
    <%= cl_image_tag event.photo.key, alt: '#' %>
  </div>
  <div class="info">
    <div class="index-card-event">
      <div class="index-card-info">
      <h2> <%= event.name %> </h2>
      <p> <%= event.start_time.strftime("%A, %d %b %Y %l:%M %p") %> until <%= event.end_time.strftime("%A, %d %b %Y %l:%M %p") %> </p>
      <p> <%= truncate(event.description, length:25, separator: ' ') %>
      <p> <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="people"/> by <%= event.user.company_name %> </p>
      </div>
    </div>
  </div>
  <%# <div class="index-card-main">
    <span><i class="fas fa-eye"></i>2350</span>
    <span><i class="fas fa-comment-alt"></i>624</span>
    <span><i class="fas fa-download"></i>1470</span>
  </div> %>
</div>
